{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "ES5",
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [".eslintrc.json", "./src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.js", "node_modules"]
}
