{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "ES5",
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist/js",
    "rootDir": "src/scripts",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["./src/scripts/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
